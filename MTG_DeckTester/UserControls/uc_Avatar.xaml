<UserControl x:Class="MTG_DeckTester.UserControls.uc_Avatar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MTG_DeckTester.UserControls"
             mc:Ignorable="d" d:DesignWidth="150" Height="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" x:Name="img_avatar"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" x:Name="lbl_hp" IsEnabled="False" Content="20" Background="White" FontSize="32" FontWeight="Bold"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" BorderBrush="Black" BorderThickness="1" />
            <Button x:Name="btn_hp_left" Grid.Row="0" MouseLeftButtonUp="Hp_Down" Margin="0,0,25,0" Background="{x:Null}" BorderBrush="Transparent"/>
            <Button x:Name="btn_hp_right" Grid.Row="0" MouseLeftButtonUp="Hp_Up" Margin="25,0,0,0" Background="{x:Null}" BorderBrush="Transparent"/>
            <Image Grid.Row="1" x:Name="img_deck_color"  RenderTransformOrigin="1,1" />
            <Button Grid.Row="1" x:Name="btn_deck_color" Content="" Opacity="0" MouseDoubleClick="Change_DeckColor" />
        </Grid>
        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
