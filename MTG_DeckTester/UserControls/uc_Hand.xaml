        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="2"/>
        <Image Grid.Column="3" x:Name="img_card_3" MouseEnter="Show_Card" MouseLeave="End_Show_Card" MouseLeftButtonDown="PlayCard"/>
