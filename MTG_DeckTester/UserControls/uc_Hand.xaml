        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1"/>
        <Image Grid.Column="2" x:Name="img_card_2" MouseEnter="Show_Card" MouseLeave="End_Show_Card" MouseLeftButtonDown="PlayCard"/>
