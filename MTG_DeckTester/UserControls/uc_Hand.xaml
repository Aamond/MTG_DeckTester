        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="3"/>
        <Image Grid.Column="4" x:Name="img_card_4" MouseEnter="Show_Card" MouseLeave="End_Show_Card" MouseLeftButtonDown="PlayCard"/>
