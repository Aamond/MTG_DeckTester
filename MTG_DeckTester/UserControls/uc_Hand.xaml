        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="4"/>
        <Image Grid.Column="5" x:Name="img_card_5" MouseEnter="Show_Card" MouseLeave="End_Show_Card" MouseLeftButtonDown="PlayCard"/>
        <Image x:Name="img_view_5" Grid.ColumnSpan="3" Height="400" Margin="-200,-425,0,-71" VerticalAlignment="Top" Grid.Column="6" HorizontalAlignment="Left" Width="300"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="5"/>
        <Image Grid.Column="6" x:Name="img_card_6" MouseEnter="Show_Card" MouseLeave="End_Show_Card" MouseLeftButtonDown="PlayCard"/>
        <Image x:Name="img_view_6" Grid.ColumnSpan="3" Height="400" Margin="-200,-425,0,-71" VerticalAlignment="Top" Grid.Column="7" HorizontalAlignment="Left" Width="300"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="6"/>
        <Image Grid.Column="7" x:Name="img_card_7" MouseEnter="Show_Card" MouseLeave="End_Show_Card" MouseLeftButtonDown="PlayCard"/>
        <Image x:Name="img_view_7" Grid.ColumnSpan="3" Height="400" Margin="-200,-425,0,-71" VerticalAlignment="Top" Grid.Column="8" HorizontalAlignment="Left" Width="300"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="7"/>
        <Image Grid.Column="8" x:Name="img_card_8" MouseEnter="Show_Card" MouseLeave="End_Show_Card" MouseLeftButtonDown="PlayCard"/>
        <Image x:Name="img_view_8" Grid.ColumnSpan="3" Height="400" Margin="-200,-425,0,-71" VerticalAlignment="Top" Grid.Column="9" HorizontalAlignment="Left" Width="300"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="8"/>
        <Button x:Name="btn_hand_list" Content="+" Grid.Column="9" FontSize="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="9"/>
        <Image x:Name="img_Spell" Grid.ColumnSpan="5" HorizontalAlignment="Left" Height="517" Margin="56,-631,0,0" VerticalAlignment="Top" Width="400" Grid.Column="2" MouseLeftButtonDown="End_Spell"/>
