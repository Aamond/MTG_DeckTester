<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTG_DeckTester"
        xmlns:UserControls="clr-namespace:MTG_DeckTester.UserControls" x:Class="MTG_DeckTester.MainWindow"
        mc:Ignorable="d"
        Title="Magic The Gathering - DeckTester (Powered by Aamond)" Height="700" Width="1280" MinWidth="1280" MinHeight="700">
    <Grid>
        <Grid Height="100" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="461*"/>
                <ColumnDefinition Width="75*"/>
            </Grid.ColumnDefinitions>
            <UserControls:uc_Avatar Grid.Column="0"/>
            <UserControls:uc_Hand Grid.Column="1"/>
            <Button Grid.Column="2" x:Name="btn_EndTurn" Content="Fin de tour" Margin="19,21,19,25" RenderTransformOrigin="-0.533,-1.1" Background="#FF6E6A6A" FontSize="20" FontFamily="Trebuchet MS" FontWeight="Bold" BorderThickness="2"/>
        </Grid>
    </Grid>
</Window>
